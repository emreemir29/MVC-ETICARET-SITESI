@model ETicaretDersiProje.Eticaret.MvcWebUI.Models.SupplierListViewModel
@{
    Layout = "../_LayoutPageAdmin.cshtml";
}

<h2>Satıcılar</h2>

<p>
    @Html.ActionLink("Satıcı Oluştur", "Create", new {/* id=item.PrimaryKey */})
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Şirket İsmi</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Müşteri</th>
            <th>Logo</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Suppliers)
        {
            <tr>
                <td>@item.SupplierID</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactFName</td>
                <td>@item.ContactLName</td>
                <td>@item.City</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Customer.FirstName</td>
                <td><img src="@item.Logo" width="50" height="50" /></td>

                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.SupplierID }) |
                    @Html.ActionLink("Detay", "Detail", new { id = item.SupplierID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.SupplierID })
                </td>
            </tr>
        }
    </tbody>
</table>
