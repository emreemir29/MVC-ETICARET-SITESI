@model ETicaretDersiProje.Eticaret.MvcWebUI.Models.CustomerListViewModel
@{
    Layout = "../_LayoutPageAdmin.cshtml";
}

<h2>Satıcılar</h2>

<p>
    @Html.ActionLink("Müşteri Oluştur", "Create", new {/* id=item.PrimaryKey */})
</p>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Şirket İsmi</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Müşteri</th>
        <th>İşlemler</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>@item.CustomerID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.City</td>
            <td>@item.Phone</td>
            <td>@item.Role.RoleName</td>
            <td>@item.CreditCard</td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CustomerID }) |
                @Html.ActionLink("Detay", "Detail", new { id = item.CustomerID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.CustomerID })
            </td>
        </tr>
    }
    </tbody>
</table>
