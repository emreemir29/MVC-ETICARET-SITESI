@model ETicaretDersiProje.Eticaret.Entities.Concrete.Cart
@using ETicaretDersiProje.Eticaret.Entities.Concrete
@{
    Layout = "../_LayoutPageHome.cshtml";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li class="active">Sepet</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Ürünler</td>
                        <td class="description"></td>
                        <td class="price">Fiyatı</td>
                        <td class="quantity">Adet</td>
                        <td class="total">Toplam</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                @if (Session["sepet"] == null || (int)Session["total"] == 0)
                {
                    <tr>
                        <td class="cart_product">
                         
                        </td>
                        <td class="cart_description">
                         
                            
                        </td>
                        <td class="cart_price">
                            <p>Sepetinizde ürün bulunmamaktadır.</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">
                           
                            </div>
                        </td>
                        <td class="cart_total">
                         
                        </td>
                        <td class="cart_delete">
                          
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in (List<Cart> )Session["sepet"])
                     {
                         <tr>
                             <td class="cart_product">
                                 <a href=""><img src="@item.Product.Picture" alt="" style="width: 110px;height: 110px"></a>
                             </td>
                             <td class="cart_description">
                                 <h4><a href="/Home/Detail/@item.Product.ProductID">@item.Product.ProductName</a></h4>
                                 <p>Web ID: 1089772</p>
                             </td>
                             <td class="cart_price">
                                 <p>@item.Product.UnitPrice TL</p>
                             </td>
                             <td class="cart_quantity">
                                 <div class="cart_quantity_button">
                                     <p>@item.Quantity</p>
                                 </div>
                             </td>
                             <td class="cart_total">
                                 <p class="cart_total_price">@item.Total TL</p>
                             </td>
                             <td class="cart_delete">
                                 <a class="cart_quantity_delete" href="/Cart/Remove/@item.Product.ProductID"><i class="fa fa-times"></i></a>
                             </td>
                         </tr>
                     }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    
                        <td style="float: right"><a class="btn btn-primary" href="/Checkout/Index" style="float: right">Alışverişe devam et</a></td>
                    </tr>
                    <tr>
                        <td colspan="4">&nbsp;</td>
                        <td colspan="2">
                            <table class="table table-condensed total-result">
                                <tr>
                                    <td>Sepet Toplamı</td>
                                    <td>@Session["total"] TL</td>
                                </tr>
                              
                                <tr class="shipping-cost">
                                    <td>Kargo Ücreti</td>
                                    <td>Bedava</td>										
                                </tr>
                                <tr>
                                    <td>Toplam</td>
                                    <td><span>@Session["total"] TL</span></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
               
                

               
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->
